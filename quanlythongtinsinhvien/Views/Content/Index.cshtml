
@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "_PageLayout";
}
@model List<Student>

<div class="px-5 py-2">
    <div class="card">
        <h5 class="card-header">Thông tin sinh viên</h5>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Mã SV</th>
                            <th>Tên sinh viên</th>
                            <th>Giới tính</th>
                            <th>Quê quán</th>
                            <th>Ngày sinh</th>
                            <th>Số điện thoại</th>
                            <th>Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Masv</td>
                                <td>@item.Tensv</td>
                                <td>@item.Gioitinh</td>
                                <td>@item.Quequan</td>
                                <td>@item.Ngaysinh</td>
                                <td>@item.Sodienthoai</td>
                                <td>@item.Ghichu</td>
                           </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
