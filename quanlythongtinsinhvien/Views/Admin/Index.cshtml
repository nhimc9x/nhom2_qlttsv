@{
    ViewData["Title"] = "Quản lý sinh viên";
    Layout = "_PageLayout";
}
@model List<Student>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="px-5 py-2">
    <div class="card">
        <h4 class="card-header">Thông tin sinh viên</h4>
        <div class="card-header py-3">
            <a class="btn btn-success" asp-action="Themthongtin">
                <i class="fa-solid fa-user-plus mx-2"></i>
                <span>Thêm thông tin sinh viên mới</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>Mã SV</th>
                            <th>Tên sinh viên</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tbody class="ad-tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Masv</td>
                                <td>@item.Tensv</td>
                                <td>@item.Gioitinh</td>
                                <td>@item.Ngaysinh</td>
                                <td class="d-flex justify-content-center gap-3">
                                    <a class="btn btn-warning" title="Sửa" asp-action="Suathongtin" asp-route-masv="@item.Masv">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn btn-danger" title="Xóa" asp-action="Xoathongtin" asp-route-masv="@item.Masv">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

