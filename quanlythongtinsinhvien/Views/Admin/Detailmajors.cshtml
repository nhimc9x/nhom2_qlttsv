@model IEnumerable<quanlythongtinsinhvien.Models.MajorTest>

@{
    ViewData["Title"] = "Quản lý ngành học";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

@{
    if (TempData["Message"] != null)
    {
        <div class="ct-notyfi alert alert-success d-flex align-items-center" role="alert">
            <i class="fa-solid fa-circle-check"></i>
            <div>
                @TempData["Message"]
            </div>
        </div>
    }
}

<div class="px-5 py-2">
    <div class="card">
        <h4 class="card-header">Thông tin ngành học</h4>
        <div class="card-header py-3">
            <a class="btn btn-success" asp-action="Themnganhhoc">
                <i class="fa-solid fa-user-plus mx-2"></i>
                <span>Thêm ngành học mới</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered first">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Manganh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tennganh)
                            </th>
                            <th>Công cụ</th>
                        </tr>
                    </thead>
                    <tbody class="ad-tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Manganh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tennganh)
                                </td>
                                <td class="d-flex justify-content-center gap-3">
                                    <a class="btn btn-warning" title="Sửa" asp-action="Suanganhhoc" asp-route-id="@item.Id">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn btn-danger" title="Xóa" asp-action="Xoanganhhoc" asp-route-id="@item.Id">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="text-end mt-3">
        <a class="btn btn-outline-primary" href="/Admin">Trang quản lý sinh viên</a>
    </div>
</div>